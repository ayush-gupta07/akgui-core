{
  "name": "akgui-core",
  "version": "0.0.0",
  "type": "module",
  "description": "AKGUI - Production-ready React Component Library",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:lib && npm run build:types",
    "build:lib": "vite build --config vite.lib.config.ts",
    "build:types": "tsc --project tsconfig.lib.json",
    "playground": "vite --config playground/vite.config.ts",
    "create-component": "node scripts/create-component.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:visual": "playwright test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "size": "size-limit"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "dependencies": {
    "@types/react-router-dom": "^5.3.3",
    "clsx": "^2.1.0",
    "react-router-dom": "^6.26.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.40.1",
    "@size-limit/preset-small-lib": "^11.0.1",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "size-limit": "^11.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  },
  "size-limit": [
    {
      "path": "dist/index.es.js",
      "limit": "100 KB"
    }
  ],
  "keywords": [
    "react",
    "components",
    "ui",
    "design-system",
    "typescript",
    "akgui"
  ],
  "author": "Ayush Gupta",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ayush-gupta07/akgui-core.git"
  },
  "homepage": "https://github.com/ayush-gupta07/akgui-core#readme"
}
